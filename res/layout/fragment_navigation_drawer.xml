<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccc"
    tools:context=".NavigationDrawerFragment" >

    <RelativeLayout
        android:id="@+id/menu_layout_auther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/iv_auther_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_auther_menu"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_auther_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/tv_auther_des_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_margin="2dp"/>
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/lvSlideMenuList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_layout_auther"
        android:background="#cccc"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</RelativeLayout>