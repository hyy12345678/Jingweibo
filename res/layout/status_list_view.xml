<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/layout_above_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/status_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/layout_below_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/status_user_name"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/status_post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkslateblue" />

            <TextView
                android:id="@+id/status_post_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/darkslateblue" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_above_status"
        android:textColor="#000000" />
    
    <ImageView android:id="@+id/status_thumbnail_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_text"
        android:layout_margin="5dp"/>
    
    

</RelativeLayout>